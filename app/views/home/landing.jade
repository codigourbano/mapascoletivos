doctype html
html.landing
	include ../includes/head
	body.home
		header#mast-header
			.container
				.five.columns
					h1
						a(class="brand" href="/") Mapas Coletivos
							img(alt="Mapas Coletivos" src="/img/logo-big.png")
					h2 Narrativas Colaborativas
				.seven.columns
					ul#mast-nav
						- if (req.isAuthenticated())
							li
								a.button(href="/explore", title="Explorar") Explorar
							li
								a.button(href="/dashboard", title="Painel de controle") Painel de controle
							li
								a.button(href="/logout", title="Sair") Sair
						- else
							li
								a.button.light-button(href="/explore", title="Explorar") Explorar
							li 
								a.button.login(href="/login") Entrar
		section#highlight
			.container
				.four.columns
					.highlight-block.publish
						img.icon(src="/img/icon_publish.png" alt="Publique seus dados")
						h2 Publique seus dados
						p.block-text Faça camadas com MapBox e Stamen ou criando pontos no mapa
				.four.columns
					.highlight-block.publish
						img.icon(src="/img/icon_story.png" alt="Conte suas histórias")
						h2 Conte suas histórias
						p.block-text Publique relatos, fotos e vídeos geolocalizados
				.four.columns
					.highlight-block.publish
						img.icon(src="/img/icon_view.png" alt="Visualize")
						h2 Visualize
						p.block-text Crie seus mapas misturando camadas públicas de dados e histórias
			.links
				a.more(href="/tutorial") Saiba mais sobre a ferramenta
				a.register(href="/signup") <strong>Cadastre-se</strong> e comece a mapear!
		section#featured-projects(style="background-image: url(http://lab.oeco.org.br/wp-content/uploads/2014/03/mapahorta.png);")
			.project
				.container
					.five.columns
						h2 Destaque
				.project-info
					h3 Horta comunitárias no Brasil
					p.author Miguel Peixe
					a.button(href="http://mapascoletivos.com.br/maps/5331c8d7b3ffc5b447260a26/" target="_self") Veja o mapa
		if selectedProjects
			section#selected-projects.home-section
				.container
					.twelve.columns
						.title
							h2 Mapas selecionados
					.project-list
						ul
							each project, i in selectedProjects
								li.four.columns
									article
										.img(style="background-image:url(#{project.img})")
											a(href="#{project.url}" title="#{project.title}")
										h3
											a(href="#{project.url}" title="#{project.title}") #{project.title}
										p #{project.description}
		script(src="/js/jquery-1.11.0.min.js")
		script.
			$(document).ready(function(){
				(function(a){a(document).ready(function(){if(!a("body").length){console.log(a);return false;}var b=a('<div class="gic-bannera"></div>').css({position:"fixed",top:0,left:0,right:0,bottom:0,"z-index":"999999",background:"rgba(0,0,0,0.4)"});a(document).bind("keyup",function(g){if(g.which==27){b.remove()}});var f=a('<div class="gic-close" />').css({position:"absolute",top:0,bottom:0,right:0,left:0,"z-index":"1",cursor:"pointer"}).bind("click",function(){b.remove()});b.append(f);var d=a('<div class="gic-banner-container" />').css({position:"absolute",top:"10%",left:"10%",right:"10%","z-index":2}).bind("click",function(){b.remove()});b.append(d);var e=a('<a href="http://goo.gl/kdV4CS" target="_blank" />');d.append(e);var c=a('<img src="http://infoamazonia.org/wp-content/uploads/2014/04/finalistas.jpg" />').css({width:"100%",height:"auto"});e.append(c);a("body").append(b)})})(jQuery);
			})

		include ../includes/footer
